@model Fihrist.Models.RolMember

@{
    var roller = ViewBag.ListRoles as SelectList;
    var kullanicilar = ViewBag.ListMember as SelectList;


}
<form method="post" action="@Url.Action("AssignRoleToUser","Home",new{area="Management"})">
    <div class="row">
        <div class="col-12">Kullanıcı :</div>
        <div class="col-12">
            <select asp-for="MemberId" asp-items="kullanicilar"></select>
        </div>
    </div>

    <div class="row">
        <div class="col-12">Rol:</div>
        <div class="col-12">
            <select asp-for="RoleId" asp-items="roller"></select>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
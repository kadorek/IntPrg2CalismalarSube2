@model IEnumerable<Student>
@{
    var count = 1;
}
<table>
    <thead>
        <tr>
            <th>Sıra</th>
            <th>ID</th>
            <th>Name</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>